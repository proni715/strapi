{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "string"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "posts"
    },
    "media": {
      "allowedTypes": [
        "videos",
        "images"
      ],
      "type": "media",
      "multiple": true
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::post-comment.post-comment",
      "mappedBy": "post"
    }
  }
}
