{
  "kind": "collectionType",
  "collectionName": "post_comments",
  "info": {
    "singularName": "post-comment",
    "pluralName": "post-comments",
    "displayName": "Post Comment"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "text": {
      "type": "string"
    },
    "post": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::post.post",
      "inversedBy": "comments"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "comments"
    },
    "attachments": {
      "allowedTypes": [
        "images",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "replies": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comment-reply.comment-reply",
      "mappedBy": "comment"
    }
  }
}
